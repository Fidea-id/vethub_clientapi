@model Domain.Entities.Emails.InvoiceEmailData
<!DOCTYPE html>
<html lang='en'>
<head>
	<meta charset='UTF-8'>
	<meta http-equiv='X-UA-Compatible' content='IE=edge'>
	<meta name='viewport' content='width=device-width, initial-scale=1.0'>
	<title>Document</title>
	<style>
		@@import url('https://fonts.googleapis.com/css2?family=Mulish:ital,wght@0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');
		@@import url('https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css');

		body {
			font-family: 'Mulish', sans-serif;
		}

		hr {
			border: 1px solid #E4E4E4;
			opacity: 1;
		}

		table {
			border: 1px solid #E4E4E4;
			opacity: 1;
		}

			table tfoot {
				background-color: #F6FAFF !important;
				align-content: center;
			}

		h4 {
			font-size: 30px;
			font-weight: bold;
			letter-spacing: 0.48px;
		}

		h6 {
			font-size: 18px;
			font-weight: bold;
			letter-spacing: 0.29px;
		}

		.btn-colored-blue {
			background-color: #4B4BF9;
			border: none;
			color: white;
		}

			.btn-colored-blue:hover {
				opacity: 0.8;
				color: #fff;
			}

			.btn-colored-blue:active {
				opacity: 1;
				color: #fff;
			}

		.margin-navbar {
			margin-right: 88px;
		}

		ul > li > a {
			font-weight: 400;
			font-size: 11pt;
		}

		.navbar {
			padding: 24px 1rem;
		}

		dt {
			font-weight: 400;
			padding-top: 5px;
			padding-bottom: 5px;
		}

		footer {
			background-color: #F6FAFF !important;
		}

		.socmed-footer > a {
			color: #CACACA;
		}

			.socmed-footer > a:hover {
				color: #979797;
			}

		.imgFF {
			margin-left: -30px;
			margin-top: 15px;
			margin-bottom: 15px;
			height: 40px;
		}

		.EmailDate {
			font-weight: 300;
			font-size: 14px;
			margin-top: 29px;
			margin-right: 37px;
			letter-spacing: 0.22px;
			color: #447BA1;
		}

		.content {
			margin-top: -40px;
			font-size: 18px;
			font-family: 'Segoe UI';
			margin-left: 40px;
			width: 523px;
			height: 172px;
		}

			.content p {
				font-weight: 400;
				text-align: left;
				color: #646464;
				letter-spacing: 0.11px;
			}

		.button {
			border: none;
			padding: 14px 40px;
			font-size: 18px;
			cursor: pointer;
			display: inline-block;
			text-decoration: none;
			color: #F6F6F6;
			font-family: 'Mulish', sans-serif;
			font-weight: 600;
			background: #109CF1 0% 0% no-repeat padding-box;
			box-shadow: 0px 4px 20px #109cf13d;
			border-radius: 4px;
			font-size: smaller;
		}

		.TitleText {
			font-family: 'Mulish', sans-serif;
		}

		.new-footer {
			background: #192A3E 0% 0% no-repeat padding-box;
			border-radius: 8px;
			padding: 20px;
		}

		.btnLink {
			border-radius: 2px;
		}

			.btnLink a {
				border: none;
				padding: 14px 40px;
				cursor: pointer;
				display: inline-block;
				text-decoration: none;
				color: #F6F6F6;
				font-family: 'Mulish', sans-serif;
				font-weight: 600;
				background: #109CF1 0% 0% no-repeat padding-box;
				box-shadow: 0px 4px 20px #109cf13d;
				border-radius: 4px;
				font-size: smaller;
				display: inline-block;
				margin-top: 40px;
			}
	</style>
</head>
<body>
	<table border='0' style='width: 600px !important; border: 1px solid #E4E4E4; border-collapse:collapse' align='center'>
		<tbody>
			<tr style='background-color: #F5F6F8;'>
				<td style='margin-left: 37px;'><img class='imgFF' src='https://vethub.id/images/logo.png' alt='vethubLogo'/></td>
				<td align='right'>
					<div style='font-weight: 300; font-size: 14px; margin-top: 29px; margin-right: 37px; letter-spacing: 0.22px; color: #447BA1;'>
						<p style='color:#477BA1;'>@Model.Date.ToString("dd, MMMM yyyy")</p>
					</div>
				</td>
			</tr>
			<tr>
				<td colspan='2'>
					<div class='content'>
						<div style='margin-top: 80px;'>
							<p style='font-weight: 400; text-align: left; color: #646464; letter-spacing: 0.11px;'>
								Dear Mr/Ms @Model.OwnerName
								<br />
								We are pleased to inform you that a new invoice has been generated for your account from @Model.ClinicName.
								
								To view and download the invoice, please click on the link below:

							</p>
						</div>
						<div colspan='2' class='btnLink' align='center'>
							<a class='link' href='@Model.Url' target='_blank'>
								Open Invoice
							</a>
						</div>
						<div style='margin-top: 80px;'>
							<p style='font-weight: 400; text-align: left; color: #646464; letter-spacing: 0.11px;'>
								The invoice contains detailed information about the products or services purchased, the amount due, and the payment terms.
							</p>
						</div>
					</div>
				</td>
			</tr>
			<tr>
				<td colspan='2'>
					<div style='margin-top:80px; margin-bottom: -50px;' class='content'>
						<p>
							Thank you for your business!
						</p>
						<h6 style='color: #646464; font-weight: 700; margin-top: 25px;'>Vethub Team</h6>
					</div>
				</td>
			</tr>
		</tbody>
		<tfoot>
			<tr align='center' style='background-color: #109CF1;'>
				<td colspan='2' align='center' valign='middle' style='padding: 30px 40px;'>
					<div class='new-footer'>
						<p style='text-align:center;font-size:18px;color: #fff;line-height:1.5'>
							<b>Vethub</b>
						</p>
						<p style='text-align:center;font-size:12px;color: #fff;line-height:1.5'>
							Veterinary Admin <br /> by VetTalk
						</p>
						<hr style=' background-color: #109CF1; height: 1px; border: none;' />
					</div>
					<p style='margin-top: 35px;color:#fff;font-size:smaller'>Privacy Policy • Term of Usage</p>
					<!--<p><a href='#' style='color:#fff;font-size:smaller'>Berhenti langganan disini</a></p>-->
				</td>
			</tr>
		</tfoot>
	</table>
</body>
</html>